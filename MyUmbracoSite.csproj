<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Umbraco.Cms" Version="16.1.1" />
  </ItemGroup>

  <PropertyGroup>
    <UmbracoModelsBuilderEnable>true</UmbracoModelsBuilderEnable>
    <UmbracoModelsBuilderModelsMode>SourceCodeAuto</UmbracoModelsBuilderModelsMode>
    <UmbracoModelsBuilderModelsNamespace>Umbraco.Cms.Web.Common.PublishedModels</UmbracoModelsBuilderModelsNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <CopyRazorGenerateFilesToPublishDirectory>true</CopyRazorGenerateFilesToPublishDirectory>
    <!-- Remove these problematic settings -->
    <!-- <RazorCompileOnBuild>false</RazorCompileOnBuild> -->
    <!-- <RazorCompileOnPublish>false</RazorCompileOnPublish> -->
  </PropertyGroup>
</Project>