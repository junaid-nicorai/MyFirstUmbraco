@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>
@{
    Layout = null;
    
    // Navigation logic
    var homePageForNav = Umbraco.ContentAtRoot().FirstOrDefault();
    var navPages = new List<IPublishedContent>();
    if (homePageForNav != null)
    {
        navPages.Add(homePageForNav);
        navPages.AddRange(homePageForNav.Children().Where(x => x.IsVisible()));
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.Value("pageTitle", fallback: Fallback.ToAncestors)</title>
</head>
<body>

    <header>
        @if (Model.HasValue("pageImage", fallback: Fallback.ToAncestors))
        {
            var pageImage = Model.Value<IPublishedContent>("pageImage", fallback: Fallback.ToAncestors);
            if (pageImage != null)
            {
                <img src="@pageImage.Url()" alt="@pageImage.Name" width="300" />
            }
        }
        <h1>@Model.Value("pageTitle", fallback: Fallback.ToAncestors)</h1>
        <h2>@Model.Value("subtitle", fallback: Fallback.ToAncestors)</h2>
        
        <nav>
            <ul>
                @foreach (var navPage in navPages)
                {
                    <li>
                        <a href="@navPage.Url()">@navPage.Name</a>
                    </li>
                }
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>This is the footer.</p>
    </footer>

</body>
</html>